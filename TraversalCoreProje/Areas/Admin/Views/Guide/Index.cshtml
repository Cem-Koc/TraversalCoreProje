@using EntityLayer.Concrete
@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}

<h1>Rehber Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
<tr>
    <td>@count</td>
    <td><img src="@item.Image" class="w-px-40 h-auto rounded-circle" /></td>
    <td>@item.Name</td>
    <td>@item.Description</td>

    @{
        if (item.Status == true)
        {
            <td><a href="#" class="btn btn-outline-warning btn-sm">Pasif Yap</a></td>
        }
        else
        {
            <td><a href="#" class="btn btn-outline-info btn-sm">Aktif Yap</a></td>
        }
    }

    <td><a href="#" class="btn btn-outline-success btn-sm">Düzenle</a></td>
</tr>
    }
</table>
<a href="/Admin/Guide/AddGuide/" class="btn btn-outline-primary">Yeni Rehber Girişi</a>
